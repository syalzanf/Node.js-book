<%- include ('layout/header') %>
<%- include ('layout/nav') %>
<head>
    <style>
        /* body {
            font-family: Arial, sans-serif;
            background-color: #fff;
            margin: 0;
            padding: 0;
        } */

        .container {
            width: 80%;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        /* .header {
            text-align: center;
            margin-bottom: 20px;
        } */

        .content {
            margin-top: 60px;
        }

        .nota {
            border: 2px solid #000;
            padding: 20px;
        }

        .nota h1 {
            text-align: center;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .info {
            text-align: right;
            font-size: 16px;
            margin-bottom: 10px;
        }

        .info p {
            margin: 5px 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        /* tr:nth-child(even) {
            background-color: #f2f2f2;
        } */
    </style>
</head>
<div class="content">
    <div class="container">
        <div class="content">
            <div class="nota">
                <h1>Nota Transaksi - <%= kodeTransaksi %></h1>
                <div class="info">
                    <p>Tanggal Transaksi: <%= new Date().toLocaleDateString() %></p>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Daftar Buku</th>
                            <th>Harga Jual</th>
                            <th>Jumlah Beli</th>
                            <th>Subtotal(Rp)</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        <% detailTransaksi.forEach(item => { %>
                            <tr>
                                <td><%= item.kode_buku %>/ <%= item.judul %></td>
                                
                                <td><%= item.hrg_jual %></td>
                                <td><%= item.jumlah_beli %></td>
                                <td>Rp <%= item.total_pembelian %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                    <table>
                        <tr>
                            <td></td>
                            <td></td>
                            <td>Total Belanja (Rp) :</td>
                            <td>3234.65</td>
                        </tr>
                    </table>
                </table>
    </div>
</div>
    <%- include ('layout/footer') %>
