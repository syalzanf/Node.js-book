<%- include ('layout/header', { title: 'Update user page' }) %>
<%- include ('layout/nav') %>
<div class="content">
<% if (user) { %>
  <form method="POST" action="/update-user/<%= user.username %>">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= user.name %>" required>
    <label for="notlp">No Telpon:</label>
    <input type="text" id="notlp" name="notlp" value="<%= user.notlp %>" required>
    <label for="alamat">Alamat:</label>
    <input type="text" id="alamat" name="alamat" value="<%= user.alamat %>" required>
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" value="<%= user.username %>" required>
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" value="<%= user.password %>" required>
    <button type="submit">Update User</button>
  </form>
<% } else { %>
  <p>User not found</p>
<% } %>
</div>
<%- include ('layout/footer') %>


